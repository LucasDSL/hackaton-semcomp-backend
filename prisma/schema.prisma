// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output = "../src/generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User { 
  id Int @id @default(autoincrement())
  cpf String @unique 
  name String 
  email String 
  age Int
  phone String
  dependents Dependent[]
  password String 
  createdAt DateTime?
  updatedAt DateTime?
  shotsTakenByUser ShotsTakenByUser[]
}

model Dependent {
  id Int @id @default(autoincrement())
  cpf String @unique
  name String 
  email String?
  password String?
  age Int
  responsible User @relation(fields: [responsibleId], references: [id])
  responsibleId Int
  createdAt DateTime?
  updatedAt DateTime?
}

model Shot {
  id Int @id @default(autoincrement())
  name String 
  description String 
  createdAt DateTime?
  updatedAt DateTime?
  usersThatTook ShotsTakenByUser[]
}


model ShotsTakenByUser {
  user User @relation(fields: [userId], references: [id])
  userId Int
  shot Shot @relation(fields: [shotId], references: [id])
  shotId Int

  @@id([shotId, userId])
}